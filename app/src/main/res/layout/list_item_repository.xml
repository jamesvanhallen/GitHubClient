<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="horizontal"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
    android:background="#ffffeb75"
    android:id="@+id/linear_list_repo">

    <ImageView android:src="@drawable/ic_launcher"
               android:id="@+id/ivRepoOwnerPic"
               android:layout_marginRight="10dp"
               android:layout_width="16dp"
               android:layout_height="16dp" />

    <LinearLayout android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content">
        <TextView
            android:text="@string/name_repo"
            android:textStyle="bold"
            android:id="@+id/tvRepoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text=""
            android:id="@+id/tvRepoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView android:id="@+id/tvRepoOwner"
              android:text="@string/name_owner"
              android:layout_width="80dp"
              android:layout_height="wrap_content" />

    <TextView android:id="@+id/tvRepoForks"
              android:text="xxxx"
              android:gravity="right"
              android:layout_width="40dp"
              android:layout_height="match_parent" />

    <TextView android:id="@+id/tvRepoWatchers"
              android:text="xxxx"
              android:gravity="right"
              android:layout_width="40dp"
              android:layout_height="match_parent" />

</LinearLayout>